{
  "name": "Ruby",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder}/src,target=/workspace,type=bind,consistency=cached",
  "appPort": [
    "2080:80"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "shopify.ruby-lsp",
        "oderwat.indent-rainbow"
      ]
    }
  }
}